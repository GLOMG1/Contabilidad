<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Colores del fondo-->
    <SolidColorBrush x:Key="colorPrimario1" Color="#1C1D2D"/>
    <SolidColorBrush x:Key="colorPrimario2" Color="#D4D4D3"/>
    <SolidColorBrush x:Key="colorPrimario3" Color="#EFEEEB"/>

    <!--Botones-->
    <Style x:Key="panelLateral" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="#F5F4EE"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource colorPrimario2}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>